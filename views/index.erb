<main>   
  <div class="container">
  <ul>
    <% @contents.each do |content| %>
    <li>
      <!--吹き出しはじまり-->
      <div class="balloon5">
        <!--<div class="faceicon">-->
        <!--<img src="assets/picture/013880e.png">-->
        <!--</div>-->
        <div class="chatting">
          <div class="says">
            <p class="contbody"><%= content.body %></p>
            <p class="contname">投稿者：<%= content.name %>さん</p>
            <span class="time_at"><%= content.created_at %></span>
            <p class="good_nam">いいね!:<%= content.good %></p>
            <span>
              <form action="/delete/<%= content.id %>" method="post">
                <input type="submit" value="消去" class="btn btn-info">
                </form>
            </span>
             <span>
              <form action="/edit/<%= content.id %>" method="post">
                <input type="submit" value="編集" class="btn btn-info">
                </form>
            </span>
            <span>
              <form action="/good/<%= content.id %>" method="post">
               <input type="submit" value="いいね！" class="btn btn-info">
              </form>
            </span>
            
            
          </div>
        </div>
      </div>
      <!--吹き出し終わり-->
      
      
    </li>
    <%end%>
  </ul>
  </div>
  <form id="underbar" action="/new" method="post" class="talkber">
    <p>NAME:<input type="text" name="user_name" class="form-control"></p>
    <p>TEXT:<input type="text" name="body" class="form-control"></p>
    <input type="submit" value="送信✈" class="btn btn-secondary">
  </form>
</main>  

